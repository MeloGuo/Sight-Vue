{
  "name": "sight-vue",
  "version": "0.0.3",
  "description": "这是一个Vue的UI库",
  "main": "dist/sight.umd.min.js",
  "scripts": {
    "start": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib --name sight src/index.js",
    "lint": "vue-cli-service lint",
    "test": "standard --env mocha && cross-env BABEL_ENV=test karma start --single-run",
    "dev-test": "cross-env BABEL_ENV=test karma start",
    "docs-dev": "vuepress dev docs",
    "docs-build": "vuepress build docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MeloGuo/Sight-Vue.git"
  },
  "keywords": [
    "vue",
    "ui"
  ],
  "author": "MeloGuo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MeloGuo/Sight-Vue/issues"
  },
  "homepage": "https://github.com/MeloGuo/Sight-Vue#readme",
  "dependencies": {
    "vue": "^2.5.21"
  },
  "devDependencies": {
    "@vue/component-compiler-utils": "^2.3.0",
    "ajv": "^6.5.5",
    "babel-loader": "^8.0.4",
    "babel-plugin-istanbul": "^5.1.0",
    "chai-spies": "^1.0.0",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.2.1",
    "karma": "^3.1.3",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^3.0.5",
    "mocha": "^5.2.0",
    "sass": "^1.15.1",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.3.0",
    "standard": "^12.0.1",
    "vuepress": "^0.14.8",
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-eslint": "^3.2.0",
    "@vue/cli-plugin-unit-mocha": "^3.2.0",
    "@vue/cli-service": "^3.2.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-eslint": "^10.0.1",
    "chai": "^4.1.2",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.1",
    "vue-template-compiler": "^2.5.17"
  },
  "alias": {
    "vue": "./node_modules/vue/dist/vue.common.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ],
    "ignore": [
      "dist/",
      "/**/svg.js"
    ]
  },
  "eslintIgnore": ["test/"],
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  }
}
